{
  "compilerOptions": {
    "target": "es2020",
    "preserveConstEnums": true,
    "outDir": "lib",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es2020",
      "dom"
    ],
  },
  "include": [
    "src/*.ts",
    "src/*.ejs",
    "src/**/*.ts",
    "src/**/*.ejs"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}
