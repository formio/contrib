<ul class="dynamicWizard-listgroup list-group
    {{ ctx.component.striped ? 'table-striped' : ''}}
    {{ ctx.component.bordered ? 'table-bordered' : ''}}
    {{ ctx.component.hover ? 'table-hover' : ''}}
    {{ ctx.component.condensed ? 'table-sm' : ''}}
    ">
  {% if (ctx.readOnly || !ctx.isChangingMode || ctx.isDisabled) { %}
  {% if (ctx.header) { %}
  <li class="list-group-item list-group-header">
    {{ctx.header}}
  </li>
  {% } %}
  {% ctx.rows.forEach(function(row, rowIndex) { %}
  <li class="list-group-card" ref="{{ctx.ref.row}}">
    {{row}}
    <div class="has-error">
      <div class="dynamicWizard-row-error help-block">
        {{ctx.errors[rowIndex]}}
      </div>
    </div>
  </li>
  {% }) %}
  {% if (ctx.footer) { %}
  <li class="list-group-item list-group-footer">
    {{ctx.footer}}
  </li>
  {% } %}
  {% } else { %}
  <li class="list-group-field" ref="{{ctx.ref.row}}">
    {{ ctx.currentComponent }}
  </li>
  {% } %}
</ul>
{% if (!ctx.readOnly && !ctx.isBlocking) { %}
{% if (!ctx.isChangingMode) { %}
{% if (ctx.hasAddButton) { %}
  <p>Would you like to add another?</p>
  <button class="btn btn-primary" ref="{{ctx.ref.agreeButton}}">
    {{ctx.t('Yes')}}
  </button>
{% } %}
{% } else { %}
<ul class="list-inline" id="{{ ctx.dynamicWizardKey }}-nav">
  {% if (ctx.buttons.cancel) { %}
  <li class="list-inline-item">
    <button class="btn btn-secondary btn-wizard-nav-cancel"
      ref="{{ctx.dynamicWizardKey}}-cancel">{{ctx.t('cancel')}}</button>
  </li>
  {% } %}
  {% if (ctx.buttons.previous) { %}
  <li class="list-inline-item">
    <button class="btn btn-primary btn-wizard-nav-previous"
      ref="{{ctx.dynamicWizardKey}}-previous">{{ctx.t('previous')}}</button>
  </li>
  {% } %}
  {% if (ctx.buttons.next) { %}
  <li class="list-inline-item">
    <button class="btn btn-primary btn-wizard-nav-next" ref="{{ctx.dynamicWizardKey}}-next">{{ctx.t('next')}}</button>
  </li>
  {% } %}
</ul>
{% } %}
{% } %}